<body>



  <h1>FEATURED FILMS</h1>
<h2>[ Rate & Review ] </h2>

<div class="row">
  <% movies.forEach(movie => { %>
    <div class="column">
      <img src="<%= movie.title.toLowerCase().replace(/\s+/g, '') %>20234.WEBP" alt="<%= movie.title %>" style="width:100%">
      <div class="star-container">
        <i class="fa fa-star movie-star" aria-hidden="true" data-title="<%= movie.title %>"></i>
        <span class="movie-star-count"><%= movie.star %></span>
      </div>
    </div>
  <% }) %>
</div>


