<script>
  // Initialize counters for each movie
  const counters = [0, 0, 0];

  function incrementCounter(index) {
      counters[index]++;
      document.getElementById(`counter-${index}`).textContent = counters[index];
  }
</script> 


<h4>Leave a Movie Review</h4>
<form id="commentForm">
  <input type="text" id="comment-input" placeholder="comment" name="msg" required>
  <button type="submit">Submit</button>
</form>

<ul id="comments-list">
  <% messages.forEach(message => { %>
    <li>
      <span><%= message.msg %></span>
      <i class="fa fa-star" aria-hidden="true"></i>
      <span class="star-count"><%= message.star %></span>
      <i class="fa fa-trash" aria-hidden="true"></i>
    </li>
  <% }) %>
</ul>


  
